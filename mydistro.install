<?php

/**
 * Implements hook_install().
 */
function mydistro_install() {
  $enable = array(
    'theme_default' => 'my_distro_theme',
    'admin_theme'   => 'seven',
    'zen',
  );
  theme_enable($enable);

  foreach ($enable as $var => $theme) {
    if (!is_numeric($var)) {
      variable_set($var, $theme);
    }
  }

  // Disable the default Bartik theme
  theme_disable(array('bartik'));
}
